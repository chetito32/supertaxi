<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/rlSpikaEnterpriseInformation"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/myDataContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relativeForAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp">

                    <clover_studio.com.supertaxi.view.roundimage.RoundImageView
                        android:id="@+id/myAvatar"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"/>

                    <ProgressBar
                        android:id="@+id/myAvatarProgressBar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@id/relativeForAvatar"/>

                <clover_studio.com.supertaxi.view.CustomTextView
                    android:id="@+id/tvSidebarMyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_toRightOf="@id/relativeForAvatar"
                    android:layout_toEndOf="@id/relativeForAvatar"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_text_view_title_text_size"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/menuListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/lineViewAboveHome"
                    android:background="@color/menu_separator_background"/>

                <clover_studio.com.supertaxi.view.CustomTextView
                    android:id="@+id/tvHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white_to_best_gray"
                    android:textSize="@dimen/default_text_view_title_text_size"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/lineViewAboveHistory"
                    android:background="@color/menu_separator_background"/>

                <clover_studio.com.supertaxi.view.CustomTextView
                    android:id="@+id/tvHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/history"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white_to_best_gray"
                    android:textSize="@dimen/default_text_view_title_text_size"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_separator_background"/>

                <clover_studio.com.supertaxi.view.CustomTextView
                    android:id="@+id/tvSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white_to_best_gray"
                    android:textSize="@dimen/default_text_view_title_text_size"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_separator_background"/>

                <clover_studio.com.supertaxi.view.CustomTextView
                    android:id="@+id/tvReportAProblem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/report_a_problem"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white_to_best_gray"
                    android:textSize="@dimen/default_text_view_title_text_size"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_separator_background"/>

                <clover_studio.com.supertaxi.view.CustomTextView
                    android:id="@+id/tvAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white_to_best_gray"
                    android:textSize="@dimen/default_text_view_title_text_size"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menu_separator_background"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/rlSpikaEnterpriseInformation"
        android:background="@color/menu_separator_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:id="@+id/rlSpikaEnterpriseInformation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <clover_studio.com.supertaxi.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_view_title_text_size"
                android:textColor="@color/white"
                android:id="@+id/tvInformationTitle"/>

            <clover_studio.com.supertaxi.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_view_title_text_size"
                android:textColor="@color/white"
                android:id="@+id/tvInformationSubtitle"/>

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>